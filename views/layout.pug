doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        link(href="/css/app.css" rel="stylesheet")
        link(href="/css/normalize.css" rel="stylesheet")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{nombrePagina}
    header.barra
        h1 UpTask - Administrador de Proyectos 
        a(href='#') Cerrar sesion
    main.contenedor 
        aside.contenedor-proyectos 
            .panel.crear-proyecto   
                a(href='./nuevo-proyecto' class='boton') add Proyecto
                    span +
            .panel.lista-proyectos
                h2 Proyectos
                ul#proyectos.proyectos
                    if proyectos
                        each proyecto in proyectos
                            li
                                a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre
        block contenido

            pre= vardump(proyectos)